from ROOT import TFile
_file = TFile.Open("root://cmseos.fnal.gov//store/user/npoudyal//histograms_2017/ele/hists_looseCRge2e0/WGamma.root",'read')
h = _file.Get("phosel_MassEGamma_GenuinePhoton_WGamma")
h2 = _file.Get("phosel_MassEGamma_HadronicPhoton_WGamma")
h3 = _file.Get("phosel_MassEGamma_HadronicFake_WGamma")

h.Add(h2)
h.Add(h3)

h.Rebin(10)

_fileUp = TFile.Open("root://cmseos.fnal.gov//store/user/npoudyal//histograms_2017/ele/hists_BTagSF_b_up_looseCRge2e0/WGamma.root",'read')
hUp = _fileUp.Get("phosel_MassEGamma_GenuinePhoton_WGamma")
h2Up = _fileUp.Get("phosel_MassEGamma_HadronicPhoton_WGamma")
h3Up = _fileUp.Get("phosel_MassEGamma_HadronicFake_WGamma")

hUp.Add(h2Up)
hUp.Add(h3Up)

hUp.Rebin(10)

_fileDown = TFile.Open("root://cmseos.fnal.gov//store/user/npoudyal//histograms_2017/ele/hists_BTagSF_b_down_looseCRge2e0/WGamma.root",'read')
hDown = _fileDown.Get("phosel_MassEGamma_GenuinePhoton_WGamma")
h2Down = _fileDown.Get("phosel_MassEGamma_HadronicPhoton_WGamma")
h3Down = _fileDown.Get("phosel_MassEGamma_HadronicFake_WGamma")

hDown.Add(h2Down)
hDown.Add(h3Down)

hDown.Rebin(10)

hUp.SetLineColor(kRed)
hDown.SetLineColor(kBlue)

h.Draw()
hUp.Draw("same")
hDown.Draw("same")
